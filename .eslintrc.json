{
    "root": true,
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "allowImportExportEverywhere": true,
      "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "plugin:react/recommended",
      "eslint:recommended",
      "plugin:import/warnings"
    ],
    "rules": {
      "no-multi-spaces": 0,
      "object-curly-spacing": 0,
      "no-multiple-empty-lines": 0,
      "global-require": 0,
      "no-trailing-spaces": 0,
      "comma-dangle": 0,
      "arrow-parens": 0,
      "react/jsx-filename-extension" : 0,
      "react/jsx-props-no-spreading" : 0,
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false,
          "space-infix-ops": [
            "error",
            {
              "int32Hint": false
            }
          ]
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "indent": "off",
      "semi": "off"
    }
  }